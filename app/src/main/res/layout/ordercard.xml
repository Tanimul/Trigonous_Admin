<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edittextbackground"
        android:padding="3dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/constraintlayot3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:background="?android:attr/windowBackground"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ordercodeET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Product Code: "
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/productcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Category: "
                    android:textColor="@color/colorblack"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/constraintlayot4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:background="?android:attr/windowBackground"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintTop_toBottomOf="@id/constraintlayot3">

                <TextView
                    android:id="@+id/orderquantityET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Quantity: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/ordercostET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Product Cost: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/deliverycostET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1.5"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Delivery Cost: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_layout6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="?android:attr/windowBackground"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/constraintlayot4">

                <TextView
                    android:id="@+id/ordertotalcostET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Total Cost: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/totalpaidET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0.9"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Total Paid: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/totaldueET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1.1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Total Due: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="?android:attr/windowBackground"
                android:orientation="vertical"
                android:weightSum="5"
                app:layout_constraintTop_toBottomOf="@id/liner_layout6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="2"
                    android:background="?android:attr/windowBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/customername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="Customer Name: "
                        android:textColor="@color/colorblack"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/customerphoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="Phone Number: "
                        android:textColor="@color/colorblack"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/customerarea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="Area: "
                        android:textColor="@color/colorblack"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/orderdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="Date: "
                        android:textColor="@color/colorblack"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:background="?android:attr/windowBackground"
                app:layout_constraintTop_toBottomOf="@id/liner_layout5">

                <TextView

                    android:id="@+id/orderrequestET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Request: "
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>


            <TextView
                android:id="@+id/publishbyadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="?android:attr/windowBackground"
                android:gravity="end"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Order Received by ..."
                android:textColor="@color/colorblack"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/liner_layout2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>